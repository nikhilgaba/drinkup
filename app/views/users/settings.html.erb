<% content_for :header do %>
  <%= javascript_include_tag 'profileSettings' %>    
<% end %>

<div class="container">
  <div class="col-md-12">
 	  <h1>Edit Settings</h1>
 	  <hr>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, :url => url_for( :action => 'saveSettings')) do |f| %>
    <%= render 'shared/error_messages' , object: f.object %> 
    <h3>Security Information</h3>
    <form class="form-horizontal" role="form">
    <div class="field form-group">
      <%= f.label "Old Password", class: "control-label"%>
      <%= text_field_tag "oldPassword", "",  class: 'form-control', type: 'password' %>
    </div>
    <div class="field form-group">
      <%= f.label :password, "New Password", class: "control-label"%>
      <%= f.password_field :password, id: "passwordInput" ,class: 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :password_confirmation, "Confirm Password", class: "control-label"%>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="actions form-group">
      <label class="col-md-4 control-label"></label>
      <%= f.submit "Save Changes", class: "btn btn-primary btn-settings", disabled: "disabled" %>
    </div>
    </form>
    <% end %>
  </div>
</div>
<hr>
<%= link_to 'Delete Account', user_path(@user),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete your account?' }, class: "btn btn-danger pull-right" if @user == current_user %>

